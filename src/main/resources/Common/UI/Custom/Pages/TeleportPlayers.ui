$C = "../Common.ui";

@ButtonStyle = TextButtonStyle(
  Default: (
    Background: #3a7bd5,
    LabelStyle: (
      FontSize: 14,
      TextColor: #ffffff,
      RenderBold: true,
      HorizontalAlignment: Center,
      VerticalAlignment: Center
    )
  ),
  Hovered: (
    Background: #4a8be5,
    LabelStyle: (
      FontSize: 14,
      TextColor: #ffffff,
      RenderBold: true,
      HorizontalAlignment: Center,
      VerticalAlignment: Center
    )
  ),
  Pressed: (
    Background: #2a6bc5,
    LabelStyle: (
      FontSize: 14,
      TextColor: #ffffff,
      RenderBold: true,
      HorizontalAlignment: Center,
      VerticalAlignment: Center
    )
  )
);

Group {
  LayoutMode: Top;
  Anchor: (Width: 400, Height: 640);
  Background: #121528(0.96);
  Padding: (Full: 12);

  Group { Anchor: (Width: 376, Height: 10); }

  // ===== Coordinate Card =====
  Group {
    LayoutMode: Top;
    Anchor: (Width: 376, Height: 96);
    Background: #171b33(0.92);
    Padding: (Full: 10);

    Group {
      LayoutMode: Left;
      Anchor: (Width: 356, Height: 40);

      Label { Text: "X:"; Anchor: (Width: 20, Height: 40); Style: (TextColor: #c7cbe6, FontSize: 12, RenderBold: true); }
      $C.@TextField #XCoord { Anchor: (Width: 96, Height: 40); }

      Label { Text: "Y:"; Anchor: (Width: 20, Height: 40); Style: (TextColor: #c7cbe6, FontSize: 12, RenderBold: true); }
      $C.@TextField #YCoord { Anchor: (Width: 96, Height: 40); }

      Label { Text: "Z:"; Anchor: (Width: 20, Height: 40); Style: (TextColor: #c7cbe6, FontSize: 12, RenderBold: true); }
      $C.@TextField #ZCoord { Anchor: (Width: 96, Height: 40); }
    }

    Group { Anchor: (Width: 356, Height: 8); }

    TextButton #TeleportButton {
      Anchor: (Width: 356, Height: 28);
      Text: "Teleport to Coords";
      Style: @ButtonStyle;
    }
  }

  Group { Anchor: (Width: 376, Height: 10); }

